<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
>
    <Dialog
        title="{i18n>ADD_NEW_ITEM}"
        id="idAddNewTodoDialog"
        contentWidth="500px"
        resizable="true"
    >
        <content>
            <f:Form editable="true" id="idTodoItemForm">
                <f:layout>
                    <f:ResponsiveGridLayout
                        labelSpanXL="3"
                        labelSpanL="3"
                        labelSpanM="3"
                        labelSpanS="12"
                        adjustLabelSpan="false"
                        emptySpanXL="4"
                        emptySpanL="4"
                        emptySpanM="4"
                        emptySpanS="0"
                        columnsXL="1"
                        columnsL="1"
                        columnsM="1"
                        singleContainerFullSize="false"
                    />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement
                                label="{/#TodoItem/ItemDescription/@sap:label}"
                            >
                                <f:fields>
                                    <TextArea
                                        value="{detailViewModel>/todoItem/ItemDescription}"
                                        rows="3"
                                        valueLiveUpdate="true"
                                        valueState="{detailViewModel>/todoItemValidation/ItemDescription/ValueState}"
                                        valueStateText="{detailViewModel>/todoItemValidation/ItemDescription/ValueStateText}"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                label="{/#TodoItem/ItemStatus/@sap:label}"
                            >
                                <f:fields>
                                    <!-- <Input value="{detailViewModel>/todoItem/ItemStatus}"/> -->
                                    <Select
                                        selectedKey="{detailViewModel>/todoItem/ItemStatus}"
                                        forceSelection="false"
                                        items="{  
                                        path:'/ValueHelpSet',
                                        filters : [
                                            { path : 'FieldName', operator : 'EQ', value1 : 'ItemStatus'}
                                        ]
                                    }"
                                        valueState="{detailViewModel>/todoItemValidation/ItemStatus/ValueState}"
                                        valueStateText="{detailViewModel>/todoItemValidation/ItemStatus/ValueStateText}"
                                    >
                                        <items>
                                            <core:Item
                                                key="{FieldKey}"
                                                text="{FieldValue}"
                                            />
                                        </items>
                                    </Select>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                label="{/#TodoItem/Username/@sap:label}"
                            >
                                <f:fields>
                                    <Input
                                        value="{detailViewModel>/todoItem/Username}"
                                        valueState="{detailViewModel>/todoItemValidation/Username/ValueState}"
                                        valueStateText="{detailViewModel>/todoItemValidation/Username/ValueStateText}"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                label="{/#TodoItem/Category/@sap:label}"
                            >
                                <f:fields>
                                    <!-- <Input value="{detailViewModel>/todoItem/Category}"/> -->
                                    <Select
                                        selectedKey="{detailViewModel>/todoItem/Category}"
                                        forceSelection="false"
                                        items="{  
                                        path:'/ValueHelpSet',
                                        filters : [
                                            { path : 'FieldName', operator : 'EQ', value1 : 'Category'}
                                        ]
                                    }"
                                        valueState="{detailViewModel>/todoItemValidation/Category/ValueState}"
                                        valueStateText="{detailViewModel>/todoItemValidation/Category/ValueStateText}"
                                    >
                                        <items>
                                            <core:Item
                                                key="{FieldKey}"
                                                text="{FieldValue}"
                                            />
                                        </items>
                                    </Select>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </content>

        <buttons>
            <Button
                type="Reject"
                icon="sap-icon://decline"
                press=".onAddNewTodoCancelled"
            />
            <Button
                type="Accept"
                icon="sap-icon://save"
                press=".onSaveNewTodo"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
